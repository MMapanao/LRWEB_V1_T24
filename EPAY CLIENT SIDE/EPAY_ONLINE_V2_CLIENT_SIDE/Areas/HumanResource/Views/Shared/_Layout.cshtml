<body>


    <div class="container-fluid body-content" style="">

        @{
            var arrcred = new string[20];
            if (Request.Cookies["ASP_NET_TKT"] == null || Request.Cookies["ASP_NET_CD"] == null)
            {

            }
            else
            {
                arrcred = GlobalVariableClass.Base64Decode(GlobalVariableClass.Base64Decode(Request.Cookies["ASP_NET_CD"].Value.ToString())).Split(',');
                <div id="mySidenav" class="sidenav" style="padding-top:0px; ">
                    @*<img src="~/Areas/HumanResource/Resources/Images/sidebarbg.png" alt="" style="height:100vh;width:100%;position:absolute;z-index:-5;" />*@
                    <!-- sidebar top content-->
                    <div class="sidebar-top" style="">
                        <div style="width:100%;">
                            <ul style="list-style-type:none;width:100%;padding:0px;margin:0px;">
                                <li>
                                    <div style="background-color:#4f2683;width:100%;height:60px;padding:10px;padding-left:45px;padding-right:45px;">
                                        <img src="~/Areas/HumanResource/Resources/Images/ublogoviolet.jpg" alt="" style="width:100%;" />
                                    </div>
                                </li>
                                <li style="padding-left:20px;padding-right:15px;padding-top:20px;">
                                    <div class="branding" style="display:flex;">
                                        <label class="circle-picture" style="color:#fff;">@(arrcred[2].ToString().Substring(0,1)+ arrcred[3].ToString().Substring(0, 1))</label>
                                        <div class="brand2" style="padding-left:5px;">
                                            <label style="font-size:13px;color:#fff;"><b>@(arrcred[3] +" " + arrcred[2])</b></label><br />
                                            <p style="color:#fff;font-size:10px;">@arrcred[7]</p>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <ul style="list-style-type:none;padding:15px 15px 10px 20px;margin:0px;">
                            <li>
                                <a href="~/HumanResource/Manage/Index?content=EnrollEmployee" id="EnrollEmployee" name="btnside" class="btnsidebar" style="color:#4f2683;padding-top:17px;font-size:15px;"> <img src="~/Areas/HumanResource/Resources/Images/enrollclient.png" style="height:25px;margin-right:5px;margin-top:-5px;" />  <b>ENROLL</b></a>
                            </li>
                            <li>
                                <a href="~/HumanResource/Pendings/Index?content=PendingClients" id="PendingClients" name="btnside" class="btnsidebar" style="color:#4f2683;padding-top:17px;font-size:15px;"> <img src="~/Areas/HumanResource/Resources/Images/verifyclient.png" style="height:25px;margin-right:5px;margin-top:-5px;" /> <b>EMPLOYEE LIST</b></a>
                            </li>
                            <li>
                                <a href="~/HumanResource/ApproveApplications/Index?content=ApprovedClients" id="ApprovedClients" name="btnside" class="btnsidebar" style="color:#4f2683;padding-top:17px;font-size:15px;"> <img src="~/Areas/HumanResource/Resources/Images/verifyclient.png" style="height:25px;margin-right:5px;margin-top:-5px;" /> <b>APPLICATION LIST</b></a>
                            </li>
                            <li>
                                <a href="#" name="btnside" class="btnsidebar violet" id="btnlogout" style="color:#4f2683;padding-top:17px;font-size:15px;"> <img src="~/Areas/HumanResource/Resources/Images/logout.png" style="height:25px;margin-right:5px;margin-top:-5px;" /> <b>LOG OUT</b></a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        }
        <!-- main content -->
        <div class="" id="main">
            @RenderBody()
        </div>


    </div>
    <div id="loadingmodal" class="modal" data-backdrop="static" data-keyboard="false" tabindex="-1" style="">
        <div class="modal-lg" style="width:100%;height:100%;background:none">
            <div class="modal-content" style="vertical-align:middle;color:#faa634;text-align:center;width:100vw;height:100vh;background-color:#0000006e;border:none;">
                <div style="margin: auto;">
                    <span class="fa fa-spinner fa-spin fa-3x" style="color:#faa634;"></span><br><b>Loading...</b>
                </div>

            </div>
        </div>
    </div>
    <style>
        .violet {
            color: #4f2683;
        }
    </style>
    <script>
        var FolderName = '@GlobalVariableClass.FolderName';
    </script>
    <script>
        PDFHost = "@GlobalVariableClass.PDFGetHostName()";
        $(document).on('click', '#btngeneratefile',function(){
            if (confirm("Do you really want to Generate Batch file?")) {

            }
